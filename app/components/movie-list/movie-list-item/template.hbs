<li class={{this.styleNamespace}} {{on 'submit' this.deleteMovie}}>
  <div class='details'>
    <h2>
      {{this.movie.title}}
    </h2>

    <p>
      <h4>Description</h4>
      {{this.movie.description}}
    </p>

    <h5>Rating: {{this.movie.rating}}</h5>
    <button type='submit' class='btn btn-danger'>Delete</button>

  </div>
</li>